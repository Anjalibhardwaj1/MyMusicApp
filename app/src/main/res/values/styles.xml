<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name ="windowNoTitle">true</item>
    </style>

    <!-- Music Library Heading -->
    <style name="MusicLibraryHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- ListView Design -->
    <style name="ListViewDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:fillViewport">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- ListView Song Title Design -->
    <style name="ListViewSong">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- ListView Artist Title Design -->
    <style name="ListViewArtist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Song Title Design -->
    <style name="SongTitleDesign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Artist Title Design -->
    <style name="ArtistTitleDesign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Button Design -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
